<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView 
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="SEUS DADOS"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <EditText
	            android:id="@+id/nomeUsuario"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:hint="Nome"
	            android:inputType="textPersonName" >
	
	            <requestFocus />
	        </EditText>
	
	        <EditText
	            android:id="@+id/emailUsuario"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:hint="E-Mail"
	            android:inputType="textEmailAddress" />
	
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="AVALIE SEU CONHECIMENTO"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="HTML:" />
	
	        <Spinner
	            android:id="@+id/spinnerHTML"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	
	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="CSS:" />
	        
	        <Spinner
	            android:id="@+id/spinnerCSS"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	        
	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="JavaScript:" />
	        
	        <Spinner
	            android:id="@+id/spinnerJavaScript"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	        
	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Python:" />
	        
	        <Spinner
	            android:id="@+id/spinnerPython"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	        
	        <TextView
	            android:id="@+id/textView7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Django" />
	        
	        <Spinner
	            android:id="@+id/spinnerDjango"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	
	        <TextView
	            android:id="@+id/textView8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Desenvolvedor iOS:" />
	        
	        <Spinner
	            android:id="@+id/spinnerDesenvIos"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	        
	        <TextView
	            android:id="@+id/textView9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Desenvolvedor Android:" />
	        
	        <Spinner
	            android:id="@+id/spinnerDesenvAndroid"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:entries="@array/nota" />
	
	        <Button
	            android:id="@+id/btnEnviar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Enviar" />
	
	    </LinearLayout>
    </ScrollView>

</RelativeLayout>
